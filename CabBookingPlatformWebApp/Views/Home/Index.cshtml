@{
    var userEmail = Context.Session.GetString("UserEmail");
}

@if (string.IsNullOrEmpty(userEmail))
{
    <h2>Welcome to the Cab Booking Platform</h2>
    <p>Please <a asp-controller="Account" asp-action="Login">log in</a> to access the dashboard.</p>
}
else
{
    @if (!string.IsNullOrEmpty(userEmail))
    {
        <p>Hello, @userEmail</p>
    }
    <h2>Welcome to the Dashboard</h2>
    <p>Select an action: Book a cab, view past bookings, etc.</p>
}