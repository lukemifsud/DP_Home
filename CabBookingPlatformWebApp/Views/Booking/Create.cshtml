@model BookingDto

<h2>Create Booking</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="StartLocation"></label>
        <input asp-for="StartLocation" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndLocation"></label>
        <input asp-for="EndLocation" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CabType"></label>
        <select asp-for="CabType" class="form-control">
            <option value="Economic">Economic</option>
            <option value="Premium">Premium</option>
            <option value="Executive">Executive</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Passengers"></label>
        <input asp-for="Passengers" type="number" min="1" max="8" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Book Cab</button>
</form>